<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddc.server.mapper.DDCAdminMapper">
    <resultMap id="BaseResultMap" type="com.ddc.server.entity.DDCAdmin" >
        <result column="id" property="id" />
        <result column="name" property="name" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="sex" property="sex" />
        <result column="mobile" property="mobile" />
        <result column="email" property="email" />
        <result column="role_id" property="roleId" />
        <result column="remark" property="remark" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="status" property="status" />
        <result column="del_flag" property="delFlag" />
        <result column="role_name" property="roleName" />
    </resultMap>

    <sql id="Base_Column_List">
        `id`,
                `name`,
                `password`,
                `salt`,
                `sex`,
                `mobile`,
                `email`,
                `role_id`,
                `remark`,
                `create_by`,
                `create_time`,
                `update_by`,
                `update_time`,
                `status`,
                `del_flag`
    </sql>

    <select id="selectAdminList" resultMap="BaseResultMap">
        SELECT a.*,r.name as role_name
        FROM ddc_admin a inner join ddc_role r on a.role_id=r.id
        where 1=1
        <if test="start !=null">
            and a.create_time &gt;= #{start}
        </if>
        <if test="end !=null">
            and a.create_time &lt;= #{end}
        </if>
        <if test="name!=null and name!=''">
            and  a.name like ${name}
        </if>
        LIMIT #{offsets}, #{rows}
    </select>

    <select id="selectAdminCount" resultType="java.lang.Integer">
        SELECT count(distinct  a.id) as role_name
        FROM ddc_admin a inner join ddc_role r on a.role_id=r.id
        where 1=1
        <if test="start !=null">
            and a.create_time &gt;= #{start}
        </if>
        <if test="end !=null">
            and a.create_time &lt;= #{end}
        </if>
        <if test="name!=null and name!=''">
            and  a.name like ${name}
        </if>
    </select>

</mapper>
